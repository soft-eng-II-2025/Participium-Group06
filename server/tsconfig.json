{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    
    // ðŸ‘‡ AGGIUNGERE QUESTO
    "types": ["node", "jest"]
  },

  // ðŸ‘‡ INCLUDERE ANCHE I TEST
  "include": ["src/**/*.ts", "src/tests/**/*.ts"],

  // ðŸ‘‡ RIMUOVERE eslcusioni dei test
  "exclude": ["node_modules", "dist"]
}
